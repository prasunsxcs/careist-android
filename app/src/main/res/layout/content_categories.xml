<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="50px"
    android:background="#FFFFFF">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:orientation="horizontal"
            android:weightSum="1"
            >

            <TextView
                android:layout_width="200px"
                android:layout_height="80px"
                android:id="@+id/city"
                android:gravity="left|center_vertical"
                android:layout_weight="0.73"

                />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:entries="@array/country_arrays"
                android:prompt="@string/country_prompt"
                android:spinnerMode="dialog"
                style="@style/spinnerDropDownItemStyle"
                android:textAlignment="textStart"
                android:id="@+id/options"
                android:layout_weight="0.28">

            </Spinner>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:paddingLeft="100px"
            android:id="@+id/sample"
            />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mental Wellness"
        android:gravity="left|center_vertical"
        android:drawableLeft="@drawable/mentalwellness"
        android:drawableRight="@drawable/rightarrow"
        android:textAllCaps="false"
        android:id="@+id/mentalwellness"
        android:background="@drawable/btn_effect"
        android:paddingLeft="30px"
        android:paddingRight="30px"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/divider"
        android:background="#FFFFFF"
        android:layout_gravity="center"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dietitian"
        android:gravity="left|center_vertical"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/dietitian"
        android:drawableRight="@drawable/rightarrow"
        android:background="@drawable/btn_effect"
        android:id="@+id/dietitian"
        android:paddingLeft="30px"
        android:paddingRight="30px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/divider"
            android:background="#FFFFFF"
            android:layout_gravity="center"
            />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Physiotherapist"
        android:gravity="left|center_vertical"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/physiotherapist"
        android:drawableRight="@drawable/rightarrow"
        android:background="@drawable/btn_effect"
        android:id="@+id/physiotherapist"
        android:paddingLeft="30px"
        android:paddingRight="30px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/divider"
            android:background="#FFFFFF"
            android:layout_gravity="center"

            />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vets"
        android:gravity="left|center_vertical"
        android:drawableRight="@drawable/rightarrow"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/vest"
        android:background="@drawable/btn_effect"
        android:id="@+id/vets"
        android:paddingLeft="30px"
        android:paddingRight="30px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/divider"
            android:background="#FFFFFF"
            android:layout_gravity="center"

            />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:gravity="left|center_vertical"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/speechtheraphist"
        android:drawableRight="@drawable/rightarrow"
        android:background="@drawable/btn_effect"
        android:id="@+id/speechtherapist"
        android:paddingLeft="30px"
        android:paddingRight="30px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/divider"
            android:background="#FFFFFF"
            android:layout_gravity="center"

            />
        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:gravity="left|center_vertical"
        android:drawableRight="@drawable/rightarrow"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/spaandsalon"
        android:background="@drawable/btn_effect"
        android:id="@+id/spaandsalon"
        android:paddingLeft="30px"
        android:paddingRight="30px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/divider"
            android:background="#FFFFFF"
            android:layout_gravity="center"

            />

        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:gravity="left|center_vertical"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/generalphysician"
        android:drawableRight="@drawable/rightarrow"
        android:background="@drawable/btn_effect"
        android:id="@+id/generalphysician"
        android:paddingLeft="30px"
        android:paddingRight="30px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/divider"
            android:background="#FFFFFF"
            android:layout_gravity="center"

            />
        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:gravity="left|center_vertical"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/accupressure"
        android:drawableRight="@drawable/rightarrow"
        android:background="@drawable/btn_effect"
        android:id="@+id/accupressure"
        android:paddingLeft="30px"
        android:paddingRight="30px"/>

</LinearLayout>
</ScrollView>